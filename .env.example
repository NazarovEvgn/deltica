# Database Configuration
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_HOST=localhost
DB_PORT=5432
DB_NAME=deltica_db

# Backend Configuration (Production)
# Для локальной сети без HTTPS используйте http://
# Для production с HTTPS используйте https://
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000

# JWT Secret (ВАЖНО: измените на случайную строку в production!)
JWT_SECRET_KEY=your-secret-key-change-this-in-production-min-32-chars
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# CORS Origins (разрешенные адреса клиентов)
# Для локальной сети: http://192.168.1.*, localhost, electron://
CORS_ORIGINS=http://localhost:5173,http://localhost:8080,null

# Environment
ENVIRONMENT=production